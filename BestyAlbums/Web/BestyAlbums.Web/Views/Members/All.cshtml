@model IList<MemberAllViewModel>

<div class="topCenterBtnLink text-center mx-auto">
    <a class="btn btn-primary btn-lg btn-block rounded" href="/Members/Add">Add member</a>
</div>
@if (@Model.Count > 0)
{
    <div class="border standardDiv">
        <table class="text-center mx-auto">
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td class="border">
                        <img class="listingImageSize" src="@Model[i].ImageUrl" alt="Artist image" />
                        <p>@Model[i].FirstName @Model[i].LastName</p>
                        <p>Birthday: @Model[i].BirthDate</p>
                        <p>Artist: @Model[i].Artist</p>
                        <p>Joined: @Model[i].Joined</p>
                        @if (@Model[i]?.Left != null)
                        {
                            <p>Left: @Model[i].Left</p>
                        }
                        <p>Gender: @Model[i].Gender</p>
                        <a class="btn btn-primary rounded" href="/Members/Edit/@Model[i].Id">Edit</a>
                        <a class="btn btn-danger rounded" href="/Members/Delete/@Model[i].Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="border standardDiv text-center h1">
        <p>There are no members yet.</p>
    </div>
}