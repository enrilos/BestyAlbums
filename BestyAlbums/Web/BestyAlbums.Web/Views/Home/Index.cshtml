@model IEnumerable<AlbumListingHomeViewModel>

<div>
    <div class="container-home">
        <p class="h1">BestyAlbums</p>
    </div>
    <div class="container-main">
        <p class="h2">
            Post your favourite <span class="highlight-color-lightblue">albums</span> along with their respected <span class="highlight-color-lightgreen">artists</span> <span class="highlight-color-lightpink">conveniently!</span>
        </p>
    </div>
    <div class="container-latest-ablums-main">
        <p>Latest albums</p>

        <div class="container-albums">
            @foreach (var album in Model)
            {
                <div class="container-album">
                    <img src="@album.CoverUrl" alt="Album Cover" />
                    <p>@album.Name - @album.Artist</p>
                </div>
            }
            <a asp-controller="Albums" asp-action="All">
                <div class="center-con">
                    <div class="round">
                        <div id="cta">
                            <span class="arrow primera next "></span>
                            <span class="arrow segunda next "></span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>