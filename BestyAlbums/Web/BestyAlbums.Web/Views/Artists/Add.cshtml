@model ArtistInputModel

<h2>Add your favourite artist here!</h2>
<div class="container-standard">
    <form asp-controller="Artists" asp-action="Add" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" type="text" name="name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="founded">Founded</label>
            <input class="form-control" id="founded" type="date" name="founded" />
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" id="location" type="text" name="location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="rating">Rating</label>
            <input class="form-control" id="rating" type="number" step="0.1" name="rating" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="imageUrl">ImageUrl</label>
            <input class="form-control" id="imageUrl" type="text" name="imageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="container-submit">
            <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>