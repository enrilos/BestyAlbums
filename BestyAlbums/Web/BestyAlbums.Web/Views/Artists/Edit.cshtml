@model ArtistEditModel

    <div class="container-standard">
        <!--It is crucial to put asp-action="Edit" here since it allows the form to map the inputs and Id (which is required) with the viewmodel above-->
        <form asp-controller="Artists" asp-action="Edit" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for="Name" class="form-control" id="name" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="founded">Founded</label>
                <input asp-for="Founded" class="form-control" id="founded" type="date" />
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input asp-for="Location" class="form-control" id="location" type="text"  />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="rating">Rating</label>
                <input asp-for="Rating" class="form-control" id="rating" type="number" step="0.1" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="imageUrl">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" id="imageUrl" type="text" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="container-submit">
                <input class="btn btn-primary" type="submit" value="Submit" />
            </div>
        </form>
    </div>