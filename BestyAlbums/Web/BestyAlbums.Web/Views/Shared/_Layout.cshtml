<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BestyAlbums</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link rel="stylesheet" href="~/css/typography.css">
</head>
<body>
    <header>
        <nav class="container-navbar">
            <a class="navbar-title" asp-area="" asp-controller="Home" asp-action="Index">BestyAlbums</a>
            <ul class="container-navbar-menu">
                <li>
                    <a class="navbar-menu-artists-btn" asp-area="" asp-controller="Artists" asp-action="All">Artists</a>
                </li>
                <li>
                    <a class="navbar-menu-members-btn" asp-area="" asp-controller="Members" asp-action="All">Members</a>
                </li>
                <li>
                    <a class="navbar-menu-albums-btn" asp-area="" asp-controller="Albums" asp-action="All">Albums</a>
                </li>
                <li>
                    <a class="navbar-menu-songs-btn" asp-area="" asp-controller="Songs" asp-action="All">Songs</a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container-footer">
        <p>&copy; <span class="brand">BestyAlbums</span> is a property of <a class="author" href="https://github.com/enrilos/BestyAlbums">github/enrilos</a>. All rights reserved.</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
