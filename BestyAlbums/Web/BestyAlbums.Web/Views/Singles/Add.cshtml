@model IList<string>
<h2>Add a single.</h2>
<div class="formDiv">
    <form action="/Singles/Add" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" type="text" name="name" />
        </div>
        <div class="form-group">
            <label>Genre</label>
            <select class="form-select rounded" name="genre">
                <option value="@BestyAlbums.Data.Models.Enums.Genre.AlternativeMetal">AlternativeMetal</option>
                <option value="@BestyAlbums.Data.Models.Enums.Genre.HipHop">HipHop</option>
                <option value="@BestyAlbums.Data.Models.Enums.Genre.NuMetal">NuMental</option>
                <option value="@BestyAlbums.Data.Models.Enums.Genre.Pop">Pop</option>
                <option value="@BestyAlbums.Data.Models.Enums.Genre.Rap">Rap</option>
                <option value="@BestyAlbums.Data.Models.Enums.Genre.RapMetal">RapMetal</option>
            </select>
        </div>
        <div class="form-group">
            <label>Artist</label>
            <select class="form-select rounded" name="artist">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <option value="@Model[i]">@Model[i]</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>StudioType</label>
            <select class="form-select rounded" name="studioType">
                <option value="@BestyAlbums.Data.Models.Enums.StudioType.MovieStudio">MovieStudio</option>
                <option value="@BestyAlbums.Data.Models.Enums.StudioType.RadioStudio">RadioStudio</option>
                <option value="@BestyAlbums.Data.Models.Enums.StudioType.RecordingStudio">RecordingStudio</option>
                <option value="@BestyAlbums.Data.Models.Enums.StudioType.TelevisionStudio">TelevisionStudio</option>
            </select>
        </div>
        <div class="form-group">
            <label for="released">Released</label>
            <input class="form-control" id="released" type="date" name="released" />
        </div>
        <div class="form-group">
            <label for="productionTimeInDays">Production days time</label>
            <input class="form-control" id="productionTimeInDays" type="number" name="productionTimeInDays" />
        </div>
        <div class="submitDiv">
            <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>