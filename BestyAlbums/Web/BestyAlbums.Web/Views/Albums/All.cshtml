@model IList<AlbumAllViewModel>

<div class="add-record-btn text-center mx-auto">
    <a class="btn btn-primary btn-lg btn-block rounded" href="/Albums/Add">Add album</a>
</div>
@if (@Model.Count > 0)
{
    <div class="border container-standard">
        <table class="text-center mx-auto">
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td class="border">
                        <img class="img-listing-size" src="@Model[i].CoverUrl" alt="Album image" />
                        <p>Name: @Model[i].Name</p>
                        <p>Price: @Model[i].Price $</p>
                        <p>Status: @Model[i].AlbumStatus</p>
                        <a class="btn btn-primary rounded" href="/Albums/Info/@Model[i].Id">View More</a>
                        <a class="btn btn-primary rounded" href="/Albums/Edit/@Model[i].Id">Edit</a>
                        <a class="btn btn-danger rounded" href="/Albums/Delete/@Model[i].Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="border container-standard text-center h1">
        <p>There are no albums yet.</p>
    </div>
}