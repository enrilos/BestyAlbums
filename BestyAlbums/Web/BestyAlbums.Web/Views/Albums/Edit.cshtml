@model EditAlbumFormModel

<div class="container-standard">
    <form asp-controller="Albums" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name"class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="CoverUrl"></label>
            <input asp-for="CoverUrl" class="form-control" />
            <span asp-validation-for="CoverUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AlbumStatus"></label>
            <select asp-for="AlbumStatus"
                    asp-items="Html.GetEnumSelectList<BestyAlbums.Data.Models.Enums.AlbumStatus>()"
                    class="form-select rounded text-dark">
            </select>
            <span asp-validation-for="AlbumStatus" class="text-danger"></span>
        </div>

        <div class="container-submit">
            <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}