@model IEnumerable<SongListingViewModel>

<div class="add-record-container text-center mx-auto">
    <a class="add-record-btn" asp-controller="Songs" asp-action="Add">Add Song</a>
</div>

@if (@Model.Any())
{
    <div class="container-standard">
        <table class="text-center mx-auto">
            @foreach (var song in Model)
            {
                <tr>
                    <td class="record-card">
                        <p>Name: @song.Name</p>

                        @if (song.Album != null)
                        {
                            <p>Album: @song.Album</p>
                        }

                        <a class="btn btn-primary rounded" asp-controller="Songs" asp-action="Edit" asp-route-id="@song.Id">Edit</a>
                        <a class="btn btn-danger rounded" asp-controller="Songs" asp-action="Delete" asp-route-id="@song.Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="border container-standard text-center h1">
        <p>There are no songs yet.</p>
    </div>
}